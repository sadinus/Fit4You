@model Fit4You.WebApp.Models.Home.BMICalculatorModel

<div class="row">
    <div class="col-md border border-width-3 rounded border-info bg-transparent m-3">
        <form method="post" action="@Url.Action("CalculateBMI")">
            <div class="text-center my-4">BMI Calculator</div>
            <hr />
            <div class="form-group">
                <label asp-for="IsMan" class="control-label d-block">Gender</label>
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" id="isManRadioTrue" name="IsMan" class="custom-control-input" value="true">
                    <label class="custom-control-label" for="isManRadioTrue">Man</label>
                </div>
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" id="IsManRadioFalse" name="IsMan" class="custom-control-input" value="false">
                    <label class="custom-control-label" for="IsManRadioFalse">Woman</label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label">Weight</label>
                <input asp-for="Weight" type="number" class="form-control" value="@Model?.Weight" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Height" class="control-label">Height</label>
                <input asp-for="Height" type="number" class="form-control" value="@Model?.Height" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="text-center m-3">
                <button class="btn btn-info" type="submit">Calculate BMI</button>
            </div>
        </form>
