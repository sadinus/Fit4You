@model Fit4You.WebApp.Models.UserInformationModel

<div class="starter-template">
    <p class="lead">Update your account information</p>
    <br />
    <form method="post">
        <div class="col-md-6">
            <div class="form-group row">
                <label asp-for="IsMale" class="col-sm-2 col-form-label">Gender</label>
                <div class="col-sm-10">
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="IsMaleRadioTrue" name="IsMale" class="custom-control-input" value="true" checked="@(Model?.IsMale)">
                        <label class="custom-control-label" for="IsMaleRadioTrue">Male</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="IsMaleRadioFalse" name="IsMale" class="custom-control-input" value="false" checked="@(!Model?.IsMale)">
                        <label class="custom-control-label" for="IsMaleRadioFalse">Female</label>
                    </div>
                    <span asp-validation-for="IsMale" class="text-danger d-block"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Age" class="col-sm-2 col-form-label">Age</label>
                <div class="col-sm-10">
                    <input asp-for="Age" type="number" class="form-control" value="@Model?.Age" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Weight" class="col-sm-2 col-form-label">Weight</label>
                <div class="col-sm-10">
                    <div class="input-group">
                        <input asp-for="Weight" type="number" class="form-control" value="@Model?.Weight" />
                        <div class="input-group-append">
                            <div class="input-group-text">kg</div>
                        </div>
                    </div>
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row" id="BMRCalculatorRadios">
                <label asp-for="Height" class="col-sm-2 col-form-label">Height</label>
                <div class="col-sm-10">
                    <div class="input-group">
                        <input asp-for="Height" type="number" class="form-control col-xs-11" value="@Model?.Height" />
                        <div class="input-group-append col-xs-1">
                            <div class="input-group-text">cm</div>
                        </div>
                    </div>
                    <span asp-validation-for="Height" class="text-danger"></span>
                </div>
            </div>
            <button class="btn btn-primary" type="submit">Save</button>
        </div>
    </form>
</div>