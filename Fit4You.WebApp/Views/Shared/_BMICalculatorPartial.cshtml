@model Fit4You.WebApp.Models.BMICalculatorModel

<form asp-action="CalculateBMI"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-update="#BMICalculator"
      data-ajax-mode="replace">
    <div class="text-center my-4">BMI Calculator</div>
    <hr />
    <div class="form-group">
        <label asp-for="Weight" class="control-label">Weight</label>
        <div class="input-group">
            <input asp-for="Weight" type="number" class="form-control" value="@Model.Weight" />
            <div class="input-group-append">
                <div class="input-group-text">kg</div>
            </div>
        </div>
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Height" class="control-label">Height</label>
        <div class="input-group">
            <input asp-for="Height" type="number" class="form-control" value="@Model.Height" />
            <div class="input-group-append">
                <div class="input-group-text">cm</div>
            </div>
        </div>
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>
    <div class="text-center m-3">
        <button class="btn btn-info" type="submit">Calculate BMI</button>
    </div>
</form>

@if (Model != null && Model.Result != 0)
{
    <h5>Result: @Model.Result (@Model.BMIMeaning)</h5>
}